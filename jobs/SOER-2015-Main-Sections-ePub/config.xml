<?xml version='1.0' encoding='UTF-8'?>
<matrix-project plugin="matrix-project@1.4.1">
  <actions/>
  <description>Check download.epub for SOER 2015 Main sections: http://eea.europa.eu/soer-2015</description>
  <displayName>[ePub] SOER Main Sections</displayName>
  <logRotator class="hudson.tasks.LogRotator">
    <daysToKeep>-1</daysToKeep>
    <numToKeep>3</numToKeep>
    <artifactDaysToKeep>-1</artifactDaysToKeep>
    <artifactNumToKeep>-1</artifactNumToKeep>
  </logRotator>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.queueSorter.PrioritySorterJobProperty plugin="PrioritySorter@2.9">
      <priority>100</priority>
    </hudson.queueSorter.PrioritySorterJobProperty>
    <de.pellepelster.jenkins.walldisplay.WallDisplayJobProperty plugin="jenkinswalldisplay@0.6.28"/>
    <hudson.plugins.disk__usage.DiskUsageProperty plugin="disk-usage@0.25"/>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers>
    <hudson.triggers.TimerTrigger>
      <spec>H 8 * * 1-5</spec>
    </hudson.triggers.TimerTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <axes>
    <hudson.matrix.TextAxis>
      <name>server</name>
      <values>
        <string>www-devel.webdev.eea.europa.eu</string>
        <string>www-pre-production.webdev.eea.europa.eu</string>
        <string>www.eea.europa.eu</string>
      </values>
    </hudson.matrix.TextAxis>
    <hudson.matrix.TextAxis>
      <name>collection</name>
      <values>
        <string>europe</string>
        <string>countries-comparison</string>
        <string>countries</string>
      </values>
    </hudson.matrix.TextAxis>
  </axes>
  <builders>
    <hudson.tasks.Shell>
      <command>cd ${WORKSPACE}
rm -rf epubdiffreport
/var/jenkins_home/worker/workspace/www.eea.europa.eu-hudson/bin/pdfdiff -i http://${server}/soer-2015/${collection}/download.epub -o http://${server}/soer-2015/${collection}/${collection}.epub -d ${WORKSPACE}/epubdiffreport -t 180 -a 400 -e alin@eaudeweb.ro --no-cleanup-input
</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers>
    <hudson.tasks.ArtifactArchiver>
      <artifacts>epubdiffreport/*.png</artifacts>
      <allowEmptyArchive>false</allowEmptyArchive>
      <onlyIfSuccessful>false</onlyIfSuccessful>
      <fingerprint>false</fingerprint>
      <defaultExcludes>true</defaultExcludes>
    </hudson.tasks.ArtifactArchiver>
    <org.jenkinsci.plugins.imagegallery.ImageGalleryRecorder plugin="image-gallery@1.1">
      <imageGalleries>
        <org.jenkinsci.plugins.imagegallery.imagegallery.ArchivedImagesGallery>
          <title>ePub Differences</title>
          <imageWidth>300</imageWidth>
          <markBuildAsUnstableIfNoArchivesFound>false</markBuildAsUnstableIfNoArchivesFound>
          <includes>epubdiffreport/diff-*.png</includes>
        </org.jenkinsci.plugins.imagegallery.imagegallery.ArchivedImagesGallery>
        <org.jenkinsci.plugins.imagegallery.imagegallery.ArchivedImagesGallery>
          <title>ePub Output</title>
          <imageWidth>300</imageWidth>
          <markBuildAsUnstableIfNoArchivesFound>true</markBuildAsUnstableIfNoArchivesFound>
          <includes>epubdiffreport/input-*.png</includes>
        </org.jenkinsci.plugins.imagegallery.imagegallery.ArchivedImagesGallery>
      </imageGalleries>
    </org.jenkinsci.plugins.imagegallery.ImageGalleryRecorder>
  </publishers>
  <buildWrappers>
    <hudson.plugins.build__timeout.BuildTimeoutWrapper plugin="build-timeout@1.14.1">
      <strategy class="hudson.plugins.build_timeout.impl.AbsoluteTimeOutStrategy">
        <timeoutMinutes>60</timeoutMinutes>
      </strategy>
      <operationList>
        <hudson.plugins.build__timeout.operations.FailOperation/>
      </operationList>
    </hudson.plugins.build__timeout.BuildTimeoutWrapper>
  </buildWrappers>
  <executionStrategy class="hudson.matrix.DefaultMatrixExecutionStrategyImpl">
    <runSequentially>false</runSequentially>
  </executionStrategy>
</matrix-project>